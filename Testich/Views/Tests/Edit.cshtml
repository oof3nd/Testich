@model Testich.ViewModels.ChangeTestViewModel

@{
    ViewData["Title"] = "Редактирование тест";
}


<div class="container">

    <h1 class="mb-2 mt-2">Редактирование теста</h1>
 
    <form asp-controller="Tests" asp-action="Edit" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="TestId" />

        <div class="form-group">
            <label asp-for="CategoryId">Категория теста</label>
            <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                <option>Выбери категорию</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="ResultScaleId">Шкала оценки теста</label>
            <select class="form-control" asp-for="ResultScaleId" asp-items="@(new SelectList(Model.ResultScales, "Id", "Name"))">
                <option>Выбери шкалу</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TimeRestricting" class="control-label"></label>
            <input asp-for="TimeRestricting" class="form-control" />
            <span asp-validation-for="TimeRestricting" class="text-danger"></span>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="ReadyForPassing" />
            <label class="form-check-label" asp-for="ReadyForPassing">
            </label>
            <span asp-validation-for="ReadyForPassing" />
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="ShowAnswers" />
            <label class="form-check-label" asp-for="ShowAnswers">
            </label>
            <span asp-validation-for="ShowAnswers" />
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="SinglePassing" />
            <label class="form-check-label" asp-for="SinglePassing">
            </label>
            <span asp-validation-for="SinglePassing" />
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="OnlyRegisteredCanPass" />
            <label class="form-check-label" asp-for="OnlyRegisteredCanPass">
            </label>
            <span asp-validation-for="OnlyRegisteredCanPass" />
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="MyTests">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}