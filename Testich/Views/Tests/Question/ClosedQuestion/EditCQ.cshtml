@model Testich.ViewModels.ChangeCQViewModel;

@{
    ViewData["Title"] = "Редактирование закрытого вопроса";
}


<div class="container">

    <h1 class="mb-2 mt-2">Редактирование закрытого вопроса</h1>

    <form asp-controller="Tests" asp-action="EditQOT" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="TestId" />
        <input type="hidden" asp-for="QuestionOfTestId" />
        <input type="hidden" asp-for="ClosedQuestionId" />

        <div class="form-group">
            <label asp-for="QuestionIndexNumber" class="control-label"></label>
            <input type="number" asp-for="QuestionIndexNumber" class="form-control" />
            <span asp-validation-for="QuestionIndexNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuestionContent" class="control-label"></label>
            <input asp-for="QuestionContent" class="form-control" />
            <span asp-validation-for="QuestionContent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="OnlyOneRight" />
                <label class="form-check-label" asp-for="OnlyOneRight"></label>
                <span asp-validation-for="OnlyOneRight" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CorrectOptionNumbers" class="control-label"></label>
            <input type="number" asp-for="CorrectOptionNumbers" class="form-control" />
            <span asp-validation-for="CorrectOptionNumbers" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}