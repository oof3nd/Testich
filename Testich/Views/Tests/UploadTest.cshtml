@model Testich.ViewModels.UploadTestViewModel
@{
    ViewBag.Title = "Загрузка теста";
}

    <div class="container">

        <div class="float-right mt-2 mb-4">
            <a class="btn btn-primary btn-sm" role="button" asp-action="MyTests">Назад</a>
        </div>
        <h1>Загрузка теста только в формате *.csv или *.txt</h1>
        <form asp-controller="Tests" asp-action="UploadTest" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="CategoryId">Категория теста</label>
                <select class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                    <option>Выбери категорию</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ResultScaleId">Шкала оценки теста</label>
                <select class="form-control" asp-for="ResultScaleId" asp-items="@(new SelectList(Model.ResultScales, "Id", "Name"))">
                    <option>Выбери шкалу</option>
                </select>
            </div>

            <div class="custom-file">
                <input asp-for="uploadedFile"  type="file" class="custom-file-input" id="uploadedFile" name="uploadedFile" />
                <label class="custom-file-label" for="uploadedFile">Выберите файл для загрузки </label>
            </div>

            <div>   <input type="submit" class="btn btn-outline-secondary mt-2" value="Загрузить" />   </div>

        </form>


    </div>
