@model Testich.Models.LevelOfTest
@{
    ViewData["Title"] = "Добавление уровеня";
}

<div class="container">
    <h1 class="mb-2 mt-2">Добавление уровеня</h1>
    <form asp-controller="Tests" asp-action="CreateLevel" asp-anti-forgery="true">
        <div class="form-group">
            <label asp-for="Name">Наименование уровня</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LevelIndexNumber">Номер уровня в тесте</label>
            <input type="number" asp-for="LevelIndexNumber" class="form-control" />
            <span asp-validation-for="LevelIndexNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Solution">Подсказка уровня</label>
            <input type="text" asp-for="Solution" class="form-control" />
            <span asp-validation-for="Solution" class="text-danger"></span>
        </div>   
        <br />
        <div class="form-group">
            <input class="btn btn-success btn-lg btn-block" type="submit" value="Добавить" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}