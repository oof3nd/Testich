@model Testich.Models.LevelOfTest

@{
    ViewData["Title"] = "Редактирование уровня";
}

<div class="container">

    <h1 class="mb-2 mt-2">Редактирование уровня</h1> 
    <form asp-controller="Tests" asp-action="EditLevel" asp-route-idTest="@Model.TestId"  asp-route-id="@Model.Id" asp-anti-forgery="true">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name" class="control-label">Наименование уровня</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LevelIndexNumber" class="control-label">Номер уровня в тесте</label>
            <input type="number" asp-for="LevelIndexNumber" class="form-control" />
            <span asp-validation-for="LevelIndexNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Solution" class="control-label">Подсказка уровня</label>
            <input asp-for="Solution" class="form-control" />
            <span asp-validation-for="Solution" class="text-danger"></span>
        </div>


        <br />

        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}